<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputForm">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="fontFamily">@font/sf_display_bold</item>
    </style>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/textColorUnselected</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:fontFamily">@font/sf_display_regular</item>
    </style>

    <style name="TextSubmitPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_display_medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/sf_display_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextPrimaryMedium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/sf_display_medium</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextPrimaryBold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/sf_display_bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextSearch">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogAnimationNormal">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:statusBarColor">#99000000</item>
    </style>
</resources>